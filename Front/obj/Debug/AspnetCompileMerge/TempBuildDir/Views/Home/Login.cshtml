@{
    ViewBag.Title = "Login Page";
    Layout = "../Shared/_LoginLayout.cshtml";
}

@{ 
    if(ViewBag.Error != null)
    {
        <script>
            M.toast({ html: 'Error al iniciar sesión.', classes: 'rounded red' });
            Materialize.toast('I am a toast!', 3000, 'blue rounded') 
        </script> 
    }
}



<style>
    body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    main {
        flex: 1 0 auto;
    }

    body {
        background: #fff;
    }

    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
        color: #e91e63;
    }

    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
        border-bottom: 2px solid #e91e63;
        box-shadow: none;
    }
</style>

<center>
    <div class="section"></div>


    <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
            <h5>Login</h5>
            <form class="col s12" action="/Login/LoginPost" method="post">
                <div class='row'>
                    <div class='col s12'>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <i class="material-icons prefix">account_circle</i>
                        <input required class='validate' type='text' name='Username' id='Username' />
                        <label for='Username'>Username</label>
                        <span class="helper-text" data-error="Ingresa un usuario" data-success=""></span>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <i class="material-icons prefix">enhanced_encryption</i>
                        <input required class='validate' type='password' name='password' id='password' />
                        <label for='password'>Password</label>
                        <span class="helper-text" data-error="Ingresa una password" data-success=""></span>
                    </div>
                </div>

                <br />
                <center>
                    <div class='row'>
                        <button  class="btn waves-effect  waves-light appbtn" type="submit" name="action" >
                            Login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </center>
            </form>
        </div>
        <div class="toast1"></div>
    </div>
</center>




